# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# OpenAI Request Timeout in milliseconds (optional, defaults to 30000)
OPENAI_TIMEOUT=30000

# OpenAI Max Retries (optional, defaults to 3)
OPENAI_MAX_RETRIES=3

# Server API Key
# This key is used to authenticate requests from the browser extension
# Generate a secure random string (e.g., using: openssl rand -hex 32)
SERVER_API_KEY=your-secure-server-api-key-here

# Server Port (optional, defaults to 3000)
PORT=3000

# Allowed CORS Origins (optional, defaults to "*")
# For production, specify comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://example.com,https://app.example.com
ALLOWED_ORIGINS=*

# Rate Limiting Configuration
# Time window in milliseconds (optional, defaults to 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Maximum requests per window (optional, defaults to 20)
RATE_LIMIT_MAX_REQUESTS=20

# Redis Configuration (optional, for production rate limiting)
# If not set, uses in-memory rate limiting (not suitable for multiple instances)
REDIS_ENABLED=false
# REDIS_URL=redis://localhost:6379

# Maximum request body size in bytes (optional, defaults to 1048576 = 1MB)
MAX_REQUEST_SIZE=1048576

# Logging Configuration
# Log level: fatal, error, warn, info, debug, trace (optional, defaults to info)
LOG_LEVEL=info

# Environment: development, production, test (optional, defaults to development)
NODE_ENV=development
